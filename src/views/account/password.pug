extends /layouts/application.pug

block content
  .row
    .col-lg-3.col-12.p-3
      .container.bg-faded.p-3
        include /account/data_panel.pug
        p.mt-2.mb-3
          a(href=urlFor('account')) Edit data
        p.mt-2.mb-3
          a.text-danger(href=urlFor('account') data-method='delete' rel='nofollow') Delete my account      
    .col-lg-9.col-12
      +formFor(f, { url: urlFor('password'), method: 'post', title: 'Change password' })
        +input(f, 'password', { as: 'Current password' })
        +input(f, 'newPassword', { as: 'password', label: 'New password:' })
        +input(f, 'confirmation', { as: 'password', label: 'Please confirm:' })
        +button(f)
